{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
    <a href="{{ path('industry_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add category</a>
    </div>

    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Category list</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="Category" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Created" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Updated" disabled></th>
                </tr>
                </thead>
                <tbody>
                {% for industry in industries %}
                    {% if industry.parent is not empty  %}
                <tr>
                    <td> -- {{ industry.name }} - (Галузь: {{ industry.parent }})</td>
                    <td>{% if industry.createdAt %}{{ industry.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if industry.updatedAt %}{{ industry.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td><a href="{{ path('industry_edit', { 'id': industry.id }) }}" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span></a></td>
                    </td>
                </tr>{% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <a href="{{ path('industry_new_industry') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add industry</a>
    </div>
    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Industry list</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="Industry" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Created" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Updated" disabled></th>
                </tr>
                </thead>
                <tbody>
                {% for industry in industries %}
                    {% if industry.parent is empty  %}
                    <tr>
                        <td><strong>{{ industry.name }}</strong></td>
                    <td>{% if industry.createdAt %}{{ industry.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if industry.updatedAt %}{{ industry.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td><a href="{{ path('industry_edit_industry', { 'id': industry.id }) }}" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span></a></td>
                    </td>
                    </tr>{% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
