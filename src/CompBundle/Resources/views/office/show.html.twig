{% extends 'base.html.twig' %}

{% block body %}
    <h1>Офіс</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Адреса</th>
                <td>{{ office.address }}</td>
            </tr>
            <tr>
                <th>Назва компанії</th>
                <td>{{ office.company }}</td>
            </tr>
            <tr>
                <th>Країна</th>
                <td>{{ office.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('office_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Назад</a>

    <a href="{{ path('office_edit', { 'id': office.id }) }}" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> Редагувати</a>

    {{ form_start(delete_form) }}
    <input type="submit" value="Видалити" class="btn btn-danger">
    {{ form_end(delete_form) }}



    
{% endblock %}
