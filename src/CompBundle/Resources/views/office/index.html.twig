{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <a href="{{ path('office_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> New Office</a>
    </div>

    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Company list</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="Address" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Company" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Country" disabled></th>
                </tr>
                </thead>
                <tbody>
                {% for office in offices %}
                    <tr>
                        <td>{{ office.address }}</td>
                        <td>{{ office.company }}</td>
                        <td>{{ office.country }}</td>
                        <td><a href="{{ path('office_edit', { 'id': office.id }) }}" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
